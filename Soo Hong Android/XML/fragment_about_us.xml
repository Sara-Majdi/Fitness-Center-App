<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="230dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="About Us"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="385dp"
            android:layout_height="443dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:text="Introducing SH FITNESS â€“ a pioneering fitness center committed to enhancing your wellness journey through innovation. Our revolutionary app is designed to provide a seamless and personalized fitness experience, allowing users to easily book classes and tailor their workout routines to their preferences.
            \n\nEmbrace convenience with our user-friendly interface, giving you instant access to a diverse range of classes from high-intensity workouts to calming yoga sessions. Stay motivated with personalized schedules and receive real-time updates to optimize your fitness journey.
            \n\nSH FITNESS app transcends traditional fitness approaches, offering unparalleled convenience and empowerment. Elevate your workout routine and embrace the future of fitness by downloading the SH FITNESS app today. Your transformative journey towards a healthier, happier you begins here."
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="230dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Follow us for more!"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <ImageButton
            android:id="@+id/igIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="340dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_instragram"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <ImageButton
            android:id="@+id/fbIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="290dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_facebook"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/igIcon"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>