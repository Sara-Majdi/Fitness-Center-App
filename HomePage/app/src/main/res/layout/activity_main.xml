<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/gymImage"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/gym" />


    <!-- VISION -->
    <TextView
        android:id="@+id/visionTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:paddingBottom="4dp"
        app:layout_constraintTop_toBottomOf="@+id/gymImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="VISION"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/visionDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="We envision a new type of fitness industry,\n where everyone are able to find joy in fulfilling their \n health journey regardless of their fitness level."
        app:layout_constraintTop_toBottomOf="@+id/visionTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- MISSION -->
    <TextView
        android:id="@+id/missionTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:paddingBottom="4dp"
        app:layout_constraintTop_toBottomOf="@+id/visionDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="MISSION"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/missionDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="4dp"
        app:layout_constraintTop_toBottomOf="@+id/missionTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Our goal is to give consumers economical options \n at competitive costs. We're committed to providing \n everyone, the finest service and experience possible" />



    <androidx.cardview.widget.CardView
        android:id="@+id/cardExploreOurClasses"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/missionDetails">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#EFA106">

            <TextView
                android:id="@+id/exploreOurClasses"
                android:layout_width="309dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="EXPLORE OUR CLASSES"
                android:textColor="#E5ECFA"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardExploreOurClasses"/>

            <Button
                android:id="@+id/explorebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#031435"
                android:text="Classes"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/exploreOurClasses"/>

    </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>