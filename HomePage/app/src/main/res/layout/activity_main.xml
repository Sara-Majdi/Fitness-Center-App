<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gymImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/gym"/>


    </LinearLayout>

    <!-- VISION & MISSION -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="181dp"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <!-- VISION -->
        <TextView
            android:id="@+id/visionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:text="VISION"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/visionDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="We envision a new type of fitness industry,\n where everyone are able to find joy in fulfilling their \n health journey regardless of their fitness level." />

        <!-- MISSION -->
        <TextView
            android:id="@+id/missionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:text="MISSION"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/missionDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:text="Our goal is to give consumers economical options \n at competitive costs. We're committed to providing \n everyone, the finest service and experience possible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#031435"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">
>
        <TextView
            android:id="@+id/exploreOurClasses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="EXPLORE OUR CLASSES"
            android:textStyle="bold"
            android:textColor="#E5ECFA"
            android:gravity="center"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/buttonToClasses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="#EFA106"
            android:gravity="center"
            android:text="Classes"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>